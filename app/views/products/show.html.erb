<%= provide :title, @product.name %>
<div class="row">
  <div class="col-md-3">
    <%= render "shared/menu" %>
  </div>

  <div class="col-md-9">
    <div class="row">
      <div class="col-md-6">
        <%= link_to image_tag(@product.product_images[0].picture.url,
            size: "484x400", alt: @product.name),
            @product.product_images[0].picture.url, class: "thumbnail" %>
      </div>

      <div class="col-md-6">
        <div class="page-header">
          <h1><%= @product.name %></h1>
        </div>
        <div class="col-md-5">
          <div class="price">
            <p>
              <b><%= t ".price_text" %></b>
              <%= number_to_currency @product.price, locale: :en %>
            </p>
          </div>
          <%= render "products/add_cart_form" %>
        </div>
      </div>
    </div>

    <div class="row panel panel-primary">
      <div class="panel-heading">
        <%= t ".description_text" %>
      </div>
      <div class="panel-body">
        <%= @product.description %>
      </div>
    </div>

    <div class="row panel panel-primary">
      <div class="panel-heading">
        <%= t ".picture_text" %>
      </div>
      <div class="panel-body">
        <%= render @product.product_images %>
      </div>
    </div>
  </div>
</div>
